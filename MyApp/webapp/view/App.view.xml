<mvc:View
  displayBlock="true"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="opensap.myapp.controller.App"
>
        <Input
          value="{helloPanel>/FirstName}"
          description="{helloPanel>/FirstName}"
          valueLiveUpdate="true"
          width="60%"/>
        <Input
          value="{helloPanel>/LastName}"
          description="{helloPanel>/LastName}"
          valueLiveUpdate="true"
          width="60%"/>

        <Button text="Say Hello" press="onShowHello"/>
        <Button text="Save" press="onSave"/>

</mvc:View>